{
  // compilerOptions: 编译选项
  "compilerOptions": {
    "moduleResolution": "node", // 设置为 node，确保按 Node.js 的方式解析模块
    "target": "es5", // 编译后的版本
    "module": "ESNext", // 模块化方案
    "strict": true, // 启用所有严格类型检查选项
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true // 启用合成默认导入
  }
}
